{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "jsx": "react",
        "strict": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"]
}
